<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c73a3a3a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jewksu.androidgc2.portail_simulation">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Garbage Collector 2.0"
        android:id="@+id/textView3"
        android:textSize="30dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PORTAIL DE\nSIMULATION"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:textColor="#ffffffff"
        android:layout_margin="20dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
        android:text="CONTENEURS"
        android:id="@+id/button2"
        android:onClick="buttonPortailOnClick"
        android:singleLine="true"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="250dp" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="CAMIONS"
        android:id="@+id/button3"
        android:onClick="buttonPortailOnClick"
        android:singleLine="true"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="250dp" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="SUPERVISION"
        android:id="@+id/goContainer"
        android:onClick="buttonPortailOnClick"
        android:singleLine="true"
        android:layout_margin="10dp" />


</LinearLayout>
